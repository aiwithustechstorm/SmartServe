# Flask
SECRET_KEY=your-flask-secret-key
FLASK_DEBUG=True

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-or-service-key

# JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_EXPIRY_HOURS=24

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# ── Email (OTP delivery) ──────────────────────────────────────
# Option 1 (RECOMMENDED): Brevo — free 300 emails/day, sends to ANY email
# Sign up at brevo.com → SMTP & API → API Keys
BREVO_API_KEY=xkeysib-xxxxxxxxxxxxxxxx
BREVO_SENDER_EMAIL=yourapp@gmail.com

# Option 2: Resend — needs verified domain to send to all users
# Without domain, can ONLY deliver to the Resend account owner's email
RESEND_API_KEY=re_xxxxxxxxxx
RESEND_FROM=SmartServe <noreply@yourdomain.com>

# Option 3: SMTP (local dev fallback — Gmail example, blocked on Render)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=yourapp@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=SmartServe

# Dev OTP — set to true to skip real email and use hardcoded OTP "000000"
# Keep false in production to send real OTP emails
DEV_OTP=false

# Render external URL (for logo in emails & keep-alive)
RENDER_EXTERNAL_URL=https://your-app.onrender.com
